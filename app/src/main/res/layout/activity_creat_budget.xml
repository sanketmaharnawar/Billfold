<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codeitsuisse.team91.expensetracker.CreatBudget"
    android:id="@+id/createBudget"
    android:background="#000">
    <!--<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/ll1"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Budget_name"
        android:id="@+id/name"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fff"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/budgetName"
        android:hint="Name Of Budget"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="07dp"
        android:textColorHint="#ff989898"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Savings Goal:"
        android:id="@+id/description"
        android:textSize="20dp"
        android:layout_below="@+id/budgetName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColor="#fff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/budgetdescription"
        android:hint="Enter Amount:"
        android:inputType="number"
        android:layout_below="@+id/description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="07dp"
        android:textColor="#fff"
        android:textColorHint="#ff989898" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Initbal"
        android:id="@+id/initBal"
        android:layout_below="@+id/budgetdescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#fff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/InitBal"
        android:layout_below="@+id/initBal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fff"
        android:hint="0.00"
        android:textColorHint="#ff989898" />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create "
        android:id="@+id/create"
        android:layout_above="@+id/cancel"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="normal"
        android:background="#ff49d337"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textStyle="normal"
        android:layout_below="@+id/hcreatbutton"
        android:background="#fffe4b3a" />



    <!--</LinearLayout>-->
</RelativeLayout>

